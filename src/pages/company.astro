---
import Layout from '../layouts/Layout.astro';

// ページ固有の設定
const title = "運営者情報";
const description = "当サイトの運営者情報です。";
---

<Layout title={title} description={description}>
    <main class="py-16 bg-slate-50 min-h-screen px-4">
        <div class="max-w-3xl mx-auto bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">
            <h1 class="text-2xl font-bold text-center py-8 border-b border-slate-100 text-slate-700">
                運営者情報
            </h1>

            <div class="p-6 md:p-10">
                <table class="w-full text-left border-collapse">
                    <tbody>
                        <tr class="border-b border-slate-100">
                            <th class="py-5 px-4 bg-slate-50 font-bold text-slate-600 w-1/3 rounded-tl-lg">サイト名</th>
                            <td class="py-5 px-4">[あなたのサイト名を入れる]</td>
                        </tr>
                        <tr class="border-b border-slate-100">
                            <th class="py-5 px-4 bg-slate-50 font-bold text-slate-600">運営者</th>
                            <td class="py-5 px-4">[あなたの名前 または 屋号]</td>
                        </tr>
                        <tr class="border-b border-slate-100">
                            <th class="py-5 px-4 bg-slate-50 font-bold text-slate-600">所在地</th>
                            <td class="py-5 px-4">
                                〒000-0000<br>
                                [都道府県・市区町村・番地など]<br>
                                <span class="text-xs text-slate-400">※バーチャルオフィスの場合はその住所</span>
                            </td>
                        </tr>
                        <tr class="border-b border-slate-100">
                            <th class="py-5 px-4 bg-slate-50 font-bold text-slate-600">お問い合わせ</th>
                            <td class="py-5 px-4">
                                [メールアドレス]<br>
                                <span class="text-xs text-slate-500">※お問い合わせはメールにてお願いいたします。</span>
                            </td>
                        </tr>
                        <tr>
                            <th class="py-5 px-4 bg-slate-50 font-bold text-slate-600 rounded-bl-lg">事業内容</th>
                            <td class="py-5 px-4">
                                インターネット広告事業<br>
                                メディア運営事業
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="mt-10 text-center">
                    <a href="/" class="text-primary hover:underline font-bold">← トップページへ戻る</a>
                </div>
            </div>
        </div>
    </main>
</Layout>