---
import Layout from '../layouts/Layout.astro';

// ページ固有の設定
const title = "運営者情報";
const description = "Match Boxの運営者情報です。";
---

<Layout title={title} description={description}>
    <main class="py-16 bg-slate-50 min-h-screen px-4">
        <div class="max-w-3xl mx-auto bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">
            <h1 class="text-2xl font-bold flex items-center justify-center gap-3 py-8 border-b border-slate-100 text-slate-700">
                <img src="/assets/images/logo.svg" alt="Match Box" class="h-12 w-auto" />
                <span>運営者情報</span>
            </h1>

            <div class="p-6 md:p-10">
                <table class="w-full text-left border-collapse">
                    <tbody>
                        <tr class="border-b border-slate-100">
                            <th class="py-5 px-4 bg-slate-100 font-bold text-slate-600 w-1/3 rounded-tl-lg">サイト名</th>
                            <td class="py-5 px-4">Match Box</td>
                        </tr>
                        <tr class="border-b border-slate-100">
                            <th class="py-5 px-4 bg-slate-100 font-bold text-slate-600">運営者</th>
                            <td class="py-5 px-4">Cat Hack Studio</td>
                        </tr>
                        <tr class="border-b border-slate-100">
                            <th class="py-5 px-4 bg-slate-100 font-bold text-slate-600">所在地</th>
                            <td class="py-5 px-4">
                                福岡県福岡市
                            </td>
                        </tr>
                        <tr>
                            <th class="py-5 px-4 bg-slate-100 font-bold text-slate-600 rounded-bl-lg">事業内容</th>
                            <td class="py-5 px-4">
                                 Webメディア運営事業<br>
                                インターネット広告事業
                            </td>
                        </tr>
                        <tr class="border-b border-slate-100">
                            <th class="py-5 px-4 bg-slate-100 font-bold text-slate-600">お問い合わせ</th>
                            <td class="py-5 px-4">
                                当サイトに関するお問い合わせは<a href="https://ssl.form-mailer.jp/fms/ca8614db871945" class="text-[#eca314] font-bold underline decoration-dotted hover:opacity-70 transition-opacity" target="_blank">こちら</a><br>
                                <span class="text-xs text-slate-500">「Match Box」宛と入力お願いします。</span>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="mt-10 text-center">
                    <a href="#" onclick="history.back(); return false;" class="text-[#eca314] font-bold underline decoration-dotted hover:opacity-70 transition-opacity">← 前のページへ戻る</a>
                </div>
            </div>
        </div>
    </main>
</Layout>