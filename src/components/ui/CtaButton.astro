---
interface Props {
  href: string;
  text?: string;
  isSmall?: boolean; // スマホ追従用などに小さくする場合
}

const { href, text = "公式サイトを見る", isSmall = false } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class:list={[
    "group relative flex items-center justify-center font-bold text-white rounded-full shadow-lg transition-transform hover:scale-[1.02] active:scale-95 overflow-hidden",
    isSmall ? "py-3 text-base w-full" : "py-4 px-8 text-xl w-full max-w-md mx-auto shadow-xl"
  ]}
  style="background: linear-gradient(135deg, var(--color-accent) 0%, #FF8C00 100%);"
>
  <!-- キラッと光るエフェクト -->
  <span class="absolute top-0 -left-[100%] w-1/2 h-full bg-gradient-to-r from-transparent via-white/40 to-transparent skew-x-[-25deg] animate-shine"></span>
  
  {text}
  <span class="ml-2 group-hover:translate-x-1 transition-transform">→</span>
</a>

<style>
  @keyframes shine {
    0% { left: -100%; }
    20% { left: 200%; }
    100% { left: 200%; }
  }
  .animate-shine {
    animation: shine 3s infinite;
  }
</style>