---
// src/components/templates/TemplateComparison.astro
import BaseLayout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';

const { entry, Content } = Astro.props;
const data = entry.data;

// --- 1. 画像の安全な取得 (Astro imageヘルパー対応) ---
const rawMvImage = data.images?.mv || 'https://placehold.jp/1200x630.png?text=No+Image';
// 文字列(URL)か、オブジェクト(src付き)かを判定
const mvImageSrc = typeof rawMvImage === 'string' ? rawMvImage : rawMvImage.src;
const mvAlt = data.images?.mvAlt || 'Main Visual';

// --- 2. 比較・ランキングデータの処理 ---
const rankings = data.rankings || [];
const keywords = [
  ...rankings.map(item => ({ text: item.name, link: item.link })),
  ...(data.keywords || [])
];

// --- 3. Canonical URLの生成 (一貫性のために定義) ---
// astro.config.mjs の site 設定を使用
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// --- 4. OGP画像の生成 (絶対パス化) ---
const rawOgImage = data.images?.og || rawMvImage;
let ogImageUrl;
if (typeof rawOgImage === 'string') {
  ogImageUrl = rawOgImage.startsWith('http') ? rawOgImage : new URL(rawOgImage, Astro.site).href;
} else {
  // image() オブジェクトの場合は .src を使って絶対URLを構築
  ogImageUrl = new URL(rawOgImage.src, Astro.site).href;
}

// --- 5. 配色設定 ---
const defaultColors = {
  primary: '#1e3a8a', // MBA等と合わせる場合はデフォルト値を調整
  secondary: '#eeeeee',
  accent: '#ea580c',
  txtMain: '#333333',
  link: '#2563eb',
};
const colors = { ...defaultColors, ...(data.colors || {}) };
---

<BaseLayout 
  title={data.title} 
  description={data.description} 
  colors={colors} 
  keywords={keywords} 
  canonical={canonicalURL} 
  ogImage={ogImageUrl}
>
  <div class="bg-slate-50 min-h-screen pb-12">
    <section class="relative min-h-[400px] md:min-h-[500px] flex items-start justify-center overflow-hidden pt-20 pb-32 md:pt-24 md:pb-48">
      <div class="absolute inset-0 z-0">
        {typeof rawMvImage === 'string' ? (
          <img src={rawMvImage} alt={mvAlt} class="w-full h-full object-cover animate-fade-in" />
        ) : (
          <Image src={rawMvImage} alt={mvAlt} class="w-full h-full object-cover animate-fade-in" loading="eager" />
        )}
        <div class="absolute inset-0 bg-[radial-gradient(#ffffff_1.5px,transparent_1.5px)] [background-size:24px_24px] opacity-20"></div>
        <div class="absolute inset-0 bg-gradient-to-t from-gray-900/95 via-gray-900/60 to-gray-900/30"></div>
        <div class="absolute bottom-0 left-0 w-full h-40 md:h-64 bg-gradient-to-b from-transparent to-slate-50"></div>
      </div>

      <div class="relative z-10 max-w-4xl mx-auto px-4 text-center">
        <h1 class="text-3xl md:text-5xl font-extrabold leading-tight tracking-tighter text-white drop-shadow-md" set:html={data.heroTitle || data.texts?.mvCatch || data.title} />
      </div>
    </section>

    <main class="max-w-4xl mx-auto px-4 -mt-16 md:-mt-24 relative z-10">
      {/* 導入文 */}
      <div class="bg-white p-8 md:p-12 rounded-2xl shadow-xl mb-12 prose prose-lg max-w-none text-slate-700 leading-relaxed">
        <Content />
      </div>

      {/* ランキングセクション */}
      <h2 class="text-center text-2xl md:text-3xl font-extrabold mb-10 text-slate-800">
        おすすめエージェントBEST3
      </h2>
      
      <div class="space-y-10">
        {rankings.map((item) => (
          <div class="bg-white border border-slate-200 rounded-3xl overflow-hidden shadow-xl relative hover:shadow-2xl transition-shadow duration-300">
            {item.badge && (
              <div class="absolute top-0 left-0 bg-accent text-white font-bold px-6 py-2 rounded-br-2xl z-20 text-sm shadow-md">
                {item.badge}
              </div>
            )}
            
            <div class="flex flex-col md:flex-row">
              {/* 順位・名称エリア */}
              <div class="bg-slate-50 p-8 flex flex-col items-center justify-center md:w-1/4 border-b md:border-b-0 md:border-r border-slate-100">
                <span class="text-5xl font-black text-accent mb-3 tracking-tighter">{item.rank}位</span>
                <a href={item.link} class="font-bold text-xl text-primary hover:text-accent transition-colors text-center leading-snug">
                  {item.name}
                </a>
                <div class="text-yellow-500 mt-2 flex items-center gap-1 font-bold">
                  <span class="text-lg">{'★'.repeat(Math.floor(item.rate))}</span>
                  <span class="text-slate-500 text-sm">({item.rate})</span>
                </div>
              </div>
              
              {/* ポイントエリア */}
              <div class="p-8 md:w-2/4 flex flex-col justify-center">
                <ul class="space-y-4">
                  {item.points.map(pt => (
                    <li class="flex items-start text-base font-bold text-slate-700">
                      <span class="text-green-500 mr-3 text-xl">✔</span>
                      <span>{pt}</span>
                    </li>
                  ))}
                </ul>
              </div>
              
              {/* ボタンエリア */}
              <div class="p-8 md:w-1/4 flex items-center justify-center bg-slate-50/50">
                <a href={item.link} class="group block w-full text-center bg-accent hover:opacity-95 text-white font-bold py-5 rounded-full shadow-lg transition-all duration-300 relative overflow-hidden hover:-translate-y-1 hover:shadow-2xl">
                  <span class="absolute inset-0 rounded-full overflow-hidden shiny-effect"></span>
                  <span class="relative z-10 flex items-center justify-center gap-2 text-lg">
                    公式サイトへ <i class="fa-solid fa-chevron-right text-sm"></i>
                  </span>
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </main>
  </div>
</BaseLayout>

<style>
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  .animate-fade-in {
    animation: fadeIn 2s ease-out forwards;
  }

  .shiny-effect::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 50%;
    height: 100%;
    background: linear-gradient(to right, transparent 0%, rgba(255,255,255,0.4) 50%, transparent 100%);
    transform: skewX(-25deg);
    animation: shine 4s infinite;
    pointer-events: none;
  }
  @keyframes shine {
    0% { left: -100%; }
    20% { left: 200%; }
    100% { left: 200%; }
  }
</style>