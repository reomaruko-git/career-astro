---
const {
  href,
  title = "＼ 1分で完了・非公開求人を確認 ／",
  label = "公式サイトで詳細を見る",
  microCopy = "※登録は簡単1分程度で完了します",
  color = "var(--color-accent)",
  iconClass = "fa-solid fa-arrow-right"
} = Astro.props;
---
<div class="cta-container text-center mt-8 mb-4">
  {title && <p class="text-sm font-bold text-accent mb-2 !text-center">{title}</p>}
  <a href={href} class="btn-primary relative !no-underline block w-full py-4 rounded-lg shadow-lg font-bold text-lg cta-button" style={`background-color: ${color}; color: white;`} target="_blank" rel="noopener noreferrer">
    <span class="absolute inset-0 rounded-lg overflow-hidden shiny-effect"></span>
    <span class="relative z-10">
      <i class={`${iconClass} mr-2`}></i>{label}
    </span>
  </a>
  {microCopy && <span class="text-xs text-gray-500 mt-2 block">{microCopy}</span>}
</div>

<style>
  .cta-button {
    transition: all 0.3s ease-in-out;
  }
  .cta-button:hover {
    transform: translateY(-4px);
    box-shadow: 0 15px 30px -5px rgba(0, 0, 0, 0.2);
    opacity: 0.9;
  }
</style>